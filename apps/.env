# Application
NODE_ENV=development
API_GATEWAY_PORT=3001

# JWT Configuration (for User Service)
JWT_SECRET=your-super-secret-jwt-key-change-me
JWT_EXPIRES_IN=3600s

# Redis Configuration (for Caching, Queues, Locks, WebSockets)
REDIS_HOST=localhost
REDIS_PORT=6379

# PostgreSQL Configuration (for Event Service)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=admin
DB_DATABASE=ticket_booking_events

# MongoDB Configuration (for Analytics Service)
MONGO_URI=mongodb://localhost:27017/ticket_booking_analytics

# Elasticsearch Configuration (for Event Service)
ELASTICSEARCH_NODE=http://localhost:9200

# Mailer Configuration (for Notification Service)
MAILER_HOST=smtp.example.com
MAILER_PORT=587
MAILER_USER=user@example.com
MAILER_PASS=your-password

# Default Rate Limiting (for API Gateway)
THROTTLE_TTL=60
THROTTLE_LIMIT=60